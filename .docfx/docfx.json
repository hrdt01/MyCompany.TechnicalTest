{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src/",
          "exclude": [
            "../tests/**"
          ],
          "files": [
            "/**/*.csproj"
          ]
        }
      ],
      "output": "projects/",
      "outputFormat": "apiPage",
      "includePrivateMembers": false,
      "disableGitFeatures": true,
      "disableDefaultFilter": false,
      "noRestore": false,
      "namespaceLayout": "nested",
      "memberLayout": "samePage",
      "allowCompilationErrors": false,
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}",
          "toc.yml"
        ],
        "exclude": [
          "_site/**"
        ],
        "dest": "."
      },
      {
        "files": [
          "**/*.yml"
        ],
        "src": "projects",
        "dest": "projects"
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "exportViewModel": false,
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "MyCompany.TechnicalTest",
      "_appTitle": "MyCompany.TechnicalTest Documentation",
      "_enableNewTab": "true",
      "_disableNavbar": "false",
      "_enableSearch": true,
      "_disableContribution": "true",
      "_disableNextArticle": "true",
      "_disableAffix": "false",
      "pdf": false,
      "pdfTocPage": false
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ],
    "keepFileLink": false,
    "disableGitFeatures": true,
    "markdownEngineName": "markdig"
  }
}